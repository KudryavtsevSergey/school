<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="by.school.entity.Term" table="term" schema="school_journal_db">
        <id name="termId">
            <column name="term_id" sql-type="int(10) unsigned"/>
        </id>
        <property name="start">
            <column name="start" sql-type="datetime"/>
        </property>
        <property name="end">
            <column name="end" sql-type="datetime"/>
        </property>
        <property name="number">
            <column name="number" sql-type="int(11)"/>
        </property>
    </class>
</hibernate-mapping>